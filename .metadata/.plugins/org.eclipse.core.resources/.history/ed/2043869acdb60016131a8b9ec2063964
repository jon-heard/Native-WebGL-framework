precision mediump float;

uniform sampler2D mainTex;
uniform float blurAmount;
uniform float objectOpacity;
varying vec2 UVs;

void main()
{
	for(int y = -5; y < 5; y++)
	{
		for(int x = -5; x < 5; x++)
		{
			gl_FragColor +=
				texture2D(mainTex, UVs + vec2(x*blurAmount, y*blurAmount));
		}
	}
	gl_FragColor /= 100;
}
