#include "DrawCache_Glow.h"
#define GLEW_STATIC
#include <GL/glew.h>
#include <GL/gl.h>
#include <GLFW/glfw3.h>
#include "Platform.h"
#include "Shader.h"

#include <iostream>

using namespace std;
