using namespace std;

// http://stackoverflow.com/questions/23177229/how-to-cast-int-to-const-glvoid
#define BUFFER_OFFSET(i) ((char *)NULL + (i))

namespace platform
{
	struct ivec2
	{
		unsigned int x; unsigned int y;
		ivec2() { x = y = 0; }
		ivec2(int x, int y)
		{
			this->x = x;
			this->y = y;
		}
	};
	struct Character
	{
		unsigned int textureID;
		ivec2        Size;
		ivec2        Bearing;
		FT_Pos       Advance;
	};

	FT_Library ft;
	FT_Face face;
	map<char, Character> chars;
	unsigned int VAO, VBO;
	Shader* textShader = NULL;

	void clearGlyphs();
	void refreshGlyphs();

	void text_init()
	{
		if (FT_Init_FreeType(&ft))
			handleErrors(0, "FREETYPE: Could not init FreeType Library");
		if (FT_New_Face(ft, "media/times.ttf", 0, &face))
			handleErrors(0, "FREETYPE: Failed to load font");
		FT_Set_Pixel_Sizes(face, 0, 12);
		refreshGlyphs();

		if(textShader == NULL)
		{
			textShader = new Shader("media/frag_text.txt");
		}

		Shader::useShader("media/frag_text.txt");
		int texturePosition = Shader::getParameterInfo("mainTex")->id;

		glGenVertexArrays(1, &VAO);
		glGenBuffers(1, &VBO);
		glBindVertexArray(VAO);
		glBindBuffer(GL_ARRAY_BUFFER, VBO);
		glBufferData(GL_ARRAY_BUFFER, sizeof(GLfloat)*6*4, NULL, GL_DYNAMIC_DRAW);
		glVertexAttribPointer(texturePosition, 4, GL_FLOAT, GL_FALSE, 4 * sizeof(GLfloat), 0);
		glEnableVertexAttribArray(texturePosition);
		glBindBuffer(GL_ARRAY_BUFFER, 0);
		glBindVertexArray(0);

	}

	void text_shutdown()
	{
		clearGlyphs();
		FT_Done_Face(face);
		FT_Done_FreeType(ft);
		delete textShader;
	}

	void setTextSize(unsigned int size)
	{
		FT_Set_Pixel_Sizes(face, 0, size);
		refreshGlyphs();
	}

