#ifndef PLATFORM_SHADER_H_
#define PLATFORM_SHADER_H_

#include <map>

namespace platform
{
	class Shader
	{
	public:
		Shader(const char* fragSourceFile);
		virtual ~Shader();
		static void useShader(const char* name, ...);
		static void setSceneLayout(float left, float top, float right, float bottom);
	private:
		unsigned int programId = 0;
		bool ready = false;
		std::map<const char*, int> parameters;

		static std::map<const char*, Shader*> shaderCollection;
	};
}

#endif /* PLATFORM_SHADER_H_ */
