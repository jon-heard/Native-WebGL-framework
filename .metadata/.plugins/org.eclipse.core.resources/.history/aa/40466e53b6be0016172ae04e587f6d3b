
#ifndef SFMLSLIDER_H
#define SFMLSLIDER_H

#include <iostream>

class SfmlSlider
{
public:
	SfmlSlider(int minimumValue=0, int maximumValue=100, int initialValue=0);
	virtual ~SfmlSlider();

	/// Called once for each slider to draw
	virtual void draw() const;

	/// Text - The text in the label
	std::string getText() const;
	void setText(std::string value);
	/// Value - The numeric value of the slider (0-100)
	int getValue() const;
	void setValue(int value);
private:
	int minimumValue;
	int maximumValue;
	int value;

	std::string text;
	bool isDragging;
	int mouseOffset;
};

#endif
